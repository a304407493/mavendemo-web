<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
 <!--1.基本配置-->
  	<!--1.1.配置mvn版本-->
	<modelVersion>4.0.0</modelVersion>
  	<!--1.2.配置打包方式-->
  	<packaging>war</packaging>
  	<!--1.3.配置变量-->
  	<properties>
  		<!--配置编码方式-->
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<!-- jdk版本 -->
		<jdk.version>1.7</jdk.version>
		<!-- 骨架版本 -->
		<archetype.version>2.2</archetype.version>
		<!-- 单元测试版本 -->
		<junit.version>4.10</junit.version>
		<!-- 日志slf4j版本 -->
		<slf4j.version>1.7.25</slf4j.version>
		<!-- servlet版本 -->
		<servlet.version>2.5</servlet.version>
		<!-- jetty版本 -->
		<jetty.version>9.2.8.v20150217</jetty.version>
	</properties>
	<!--1.4.配置名称和url可以忽略-->
	<name>${project.artifactId}</name>
  	<url>http://${project.artifactId}.mavenDemo.com</url>
<!--2.配置本项目GAV-->
  	<groupId>com.mavendemo.pluginsql</groupId>
  	<artifactId>mavendemo-pluginsql</artifactId>
  	<version>0.0.1-SNAPSHOT</version>
<!--3.配置依赖-->
  	<dependencies>
		<!-- junit -->
    	<dependency>
      		<groupId>junit</groupId>
      		<artifactId>junit</artifactId>
      		<version>${junit.version}</version>
      		<scope>test</scope>
    	</dependency>
    	<!-- log -->
	    <dependency>
		    <groupId>org.slf4j</groupId>
		    <artifactId>slf4j-log4j12</artifactId>
		    <version>${slf4j.version}</version>
		</dependency>
		<!-- servlet -->
		<dependency>
		    <groupId>javax.servlet</groupId>
		    <artifactId>servlet-api</artifactId>
		    <version>${servlet.version}</version>
		    <scope>provided</scope>
		</dependency>
  	</dependencies>
<!--4.配置build-->
  	<build>
    	<finalName>${project.artifactId}</finalName>
    	<!-- 避免m2e的插件错误问题 -->
    	<pluginManagement>
			<plugins>
				<!--This plugin's configuration is used to store Eclipse m2e settings only. It has no influence on the Maven build itself. -->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>org.codehaus.mojo</groupId>
										<artifactId>sql-maven-plugin</artifactId>
										<versionRange>[1.0,)</versionRange>
										<goals>
											<goal>execute</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<execute />
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
    	<plugins>
    		<!-- jdk编译插件 -->
    		<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
				<source>${jdk.version}</source>
				<target>${jdk.version}</target>
				</configuration>
			</plugin>
			<!-- maven骨架插件 -->
	    	<plugin>
	        	<groupId>org.apache.maven.plugins</groupId>
	            <artifactId>maven-archetype-plugin</artifactId>
	            <version>${archetype.version}</version>
	        </plugin>
	        <!-- jetty插件 -->
	        <plugin>
		      	<groupId>org.eclipse.jetty</groupId>
		      	<artifactId>jetty-maven-plugin</artifactId>
		      	<version>${jetty.version}</version>
		      	<configuration>
		      		<!-- 配置启动端口号 -->
					<httpConnector>
					    <port>8081</port>
					</httpConnector>
					<!-- 配置自动热部署0代表关闭大于0开启 -->
					<scanIntervalSeconds>2</scanIntervalSeconds>
					<!-- 配置jetty停止命令 -->
					<stopKey>shutdown</stopKey>
  					<stopPort>9966</stopPort>
					<!-- 配置URL项目名未生效 -->
					<!--
					<webApp>
			          	<contextPath>/web</contextPath>
			        </webApp>
			         -->
		      	</configuration>
		    </plugin>
		    <!-- 配置未生效 -->
		    <plugin>
			   	<groupId>org.codehaus.mojo</groupId>
			   	<artifactId>tomcat-maven-plugin</artifactId>
			   	<version>1.1</version>
			   	<configuration>
					<path>/Demo1</path>
				    <port>8888</port>
				    <uriEncoding>UTF-8</uriEncoding>
			    </configuration>
			</plugin>
			<!-- sql插件 -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.5.1</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>sql-maven-plugin</artifactId>
				<version>1.5</version>
				<dependencies>
					<dependency>
						<groupId>mysql</groupId>
						<artifactId>mysql-connector-java</artifactId>
						<version>5.1.19</version>
					</dependency>
				</dependencies>
				<configuration>
					<driver>com.mysql.jdbc.Driver</driver>
					<username>root</username>
					<password>admin</password>
					<!-- <url>jdbc:mysql://localhost:3306/test?useUnicode=true&amp;characterEncoding=UTF-8</url> -->
					<url>jdbc:mysql://localhost:3306/yourdb?useUnicode=true&amp;characterEncoding=UTF-8</url>
					<!-- 错误：<url>jdbc:mysql://localhost:3306?useUnicode=true&amp;characterEncoding=UTF-8</url> -->
					<!-- 测试sql命令创建数据库使用<url>jdbc:mysql://localhost:3306</url> -->
				</configuration>
				<executions>
					<!-- 命令创建数据库 -->
					<execution>
			            <id>create-database</id>
			            <phase>process-test-resources</phase>
			            <goals>
			              <goal>execute</goal>
			            </goals>
			            <configuration>
			              <autocommit>true</autocommit>
			             <sqlCommand>create database yourdb1</sqlCommand>
			              <onError>continue</onError>
			            </configuration>
			        </execution>
					<!-- 命令创建数据库表 -->
					<execution>
			            <id>create-table</id>
			            <phase>process-test-resources</phase>
			            <goals>
			              <goal>execute</goal>
			            </goals>
			            <configuration>
			              <autocommit>true</autocommit>
			              <sqlCommand>create table yourtable(id INT)</sqlCommand>
			              <onError>continue</onError>
			            </configuration>
			        </execution>
			        <!-- 删除表 -->
					<execution>
						<id>drop-db-before-test-if-any</id>
						<phase>process-test-resources</phase>
						<goals>
							<goal>execute</goal>
						</goals>
						<configuration>
							<orderFile>ascending</orderFile>
							<fileset>
								<basedir>${basedir}</basedir>
								<includes>
									<include>src/test/resources/sql/drop/*.sql</include>
								</includes>
							</fileset>
							<onError>continue</onError>
						</configuration>
					</execution>
					<!-- 创建表 -->
					<execution>
                        <id>create-db</id>
                        <phase>process-test-resources</phase>
                        <goals>
                            <goal>execute</goal>
                        </goals>
                        <configuration>
                            <autocommit>true</autocommit>
                            <fileset>
								<basedir>${basedir}</basedir>
								<includes>
									<include>src/test/resources/sql/create/*.sql</include>
								</includes>
							</fileset>
                        </configuration>
                    </execution>
                    <!-- 初始化数据 -->
                    <execution>
                        <id>init-db</id>
                        <phase>process-test-resources</phase>
                        <goals>
                            <goal>execute</goal>
                        </goals>
                        <configuration>
                            <autocommit>true</autocommit>
                            <fileset>
								<basedir>${basedir}</basedir>
								<includes>
									<include>src/test/resources/sql/init/*.sql</include>
								</includes>
							</fileset>
                        </configuration>
                    </execution>
				</executions>
			</plugin>
        </plugins>
	</build>
<!--5.配置远程仓库-->
	<repositories>
